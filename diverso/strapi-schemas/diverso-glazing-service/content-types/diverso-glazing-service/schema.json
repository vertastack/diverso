{
  "kind": "collectionType",
  "collectionName": "diverso_glazing_services",
  "info": {
    "singularName": "diverso-glazing-service",
    "pluralName": "diverso-glazing-services",
    "displayName": "Diverso Glazing Service",
    "description": "Glazing service page content"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "metaTitle": {
      "type": "string",
      "required": true,
      "maxLength": 60
    },
    "metaDescription": {
      "type": "text",
      "required": true,
      "maxLength": 160
    },
    "metaImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "metaKeywords": {
      "type": "string",
      "required": false
    },
    "metaRobots": {
      "type": "string",
      "required": false,
      "default": "index, follow"
    },
    "metaUrl": {
      "type": "string",
      "required": false
    },
    "pageTitle": {
      "type": "string",
      "required": true
    },
    "pageDescription": {
      "type": "text",
      "required": true
    },
    "headerQuote": {
      "type": "text",
      "required": true
    },
    "mainTitle": {
      "type": "string",
      "required": true
    },
    "mainContent": {
      "type": "richtext",
      "required": true
    },
    "features": {
      "type": "component",
      "repeatable": true,
      "component": "diverso.feature"
    },
    "galleryImages": {
      "type": "component",
      "repeatable": true,
      "component": "diverso.gallery-image"
    },
    "infoSectionTitle": {
      "type": "string",
      "required": true
    },
    "infoSectionContent": {
      "type": "richtext",
      "required": true
    },
    "ctaTitle": {
      "type": "string",
      "required": true
    },
    "ctaSubtitle": {
      "type": "string",
      "required": true
    },
    "phoneNumber": {
      "type": "string",
      "required": true
    },
    "processSteps": {
      "type": "component",
      "repeatable": true,
      "component": "diverso.process-step"
    },
    "formTitle": {
      "type": "string",
      "required": true
    },
    "formSubtitle": {
      "type": "text",
      "required": true
    },
    "noticeText": {
      "type": "richtext",
      "required": false
    }
  }
}

{
  "kind": "collectionType",
  "collectionName": "diverso_about_sections",
  "info": {
    "singularName": "diverso-about-section",
    "pluralName": "diverso-about-sections",
    "displayName": "Diverso About Section",
    "description": "About section content for home page"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "sectionSubtitle": {
      "type": "string",
      "required": true
    },
    "sectionTitle": {
      "type": "string",
      "required": true
    },
    "sectionDescription": {
      "type": "richtext",
      "required": true
    },
    "teamImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "reviewsCardTitle": {
      "type": "string",
      "required": true
    },
    "averageRating": {
      "type": "string",
      "required": true
    },
    "ratingStars": {
      "type": "integer",
      "required": true,
      "default": 5,
      "min": 1,
      "max": 5
    },
    "reviewsLinkText": {
      "type": "string",
      "required": true
    },
    "reviewsLinkUrl": {
      "type": "string",
      "required": true
    },
    "benefits": {
      "type": "component",
      "repeatable": true,
      "component": "diverso.feature"
    },
    "ctaButtonText": {
      "type": "string",
      "required": true
    },
    "ctaButtonUrl": {
      "type": "string",
      "required": true
    }
  }
}

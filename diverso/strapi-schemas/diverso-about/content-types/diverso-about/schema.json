{
  "kind": "collectionType",
  "collectionName": "diverso_abouts",
  "info": {
    "singularName": "diverso-about",
    "pluralName": "diverso-abouts",
    "displayName": "Diverso About",
    "description": "About page content for Diverso website"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "metaTitle": {
      "type": "string",
      "required": true,
      "maxLength": 60
    },
    "metaDescription": {
      "type": "text",
      "required": true,
      "maxLength": 160
    },
    "metaImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "metaKeywords": {
      "type": "string",
      "required": false
    },
    "metaRobots": {
      "type": "string",
      "required": false,
      "default": "index, follow"
    },
    "metaUrl": {
      "type": "string",
      "required": false
    },
    "pageTitle": {
      "type": "string",
      "required": true
    },
    "pageDescription": {
      "type": "text",
      "required": true
    },
    "headerQuote": {
      "type": "text",
      "required": true
    },
    "storyTitle": {
      "type": "string",
      "required": true
    },
    "storyContent": {
      "type": "richtext",
      "required": true
    },
    "features": {
      "type": "component",
      "repeatable": true,
      "component": "diverso.feature"
    },
    "teamImages": {
      "type": "component",
      "repeatable": true,
      "component": "diverso.team-image"
    },
    "teamCaption": {
      "type": "string",
      "required": false
    }
  }
}
